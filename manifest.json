{
  "manifest_version": 3,
  "name": "Make LinkedIn Great Again",
  "version": "1.0",
  "description": "A chrome extension that provides some additional filters for the LinkedIn feed and help you focus on whats important",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Make LinkedIn Great Again",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content-filters.js", "text-manipulators.js", "chill-mode.js"],
      "all_frames": true
    }
  ]
}